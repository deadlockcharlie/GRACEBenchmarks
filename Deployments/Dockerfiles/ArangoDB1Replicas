services:
  arangodb1:
    image: arangodb:latest
    container_name: arangodb1
    environment:
      - ARANGO_NO_AUTH=1
    volumes:
      - ../../PreloadData:/var/lib/arangodb/import
    healthcheck:
      test: ["CMD-SHELL", "echo 'RETURN 0;' | arangosh || exit 1"]
      interval: 5s
      timeout: 5s
      retries: 5
    ports:
      - "8529:8529"
    networks:
      - arango-net
      
  preload1:
    image: arangodb:latest
    container_name: preload1
    depends_on:
      arangodb1:
        condition: service_healthy
    volumes:
      - ../../PreloadData:/var/lib/arangodb/import
    entrypoint:
      [
        "sh", "/var/lib/arangodb/import/arangoDBImport.sh", "tcp://arangodb1:8529" , "1"
      ]
    networks:
      - arango-net
      
networks:
  arango-net:
    driver: bridge
