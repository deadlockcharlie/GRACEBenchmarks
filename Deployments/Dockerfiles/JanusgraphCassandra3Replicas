services:
  cassandra1:
    image: cassandra:latest
    container_name: cassandra1
    environment:
      - CASSANDRA_CLUSTER_NAME=JanusGraphCluster
      - CASSANDRA_SEEDS=cassandra1
      - HEAP_NEWSIZE=128M
      - MAX_HEAP_SIZE=2048M

    ports:
      - "9042:9042"
    networks:
      - janus-net


  cassandra1-netem:
    image: gaiadocker/iproute2
    container_name: cassandra1-netem
    network_mode: "service:cassandra1"   # share net namespace with cassandra1
    cap_add:
      - NET_ADMIN
    volumes:
      - ../setup-latency.sh:/usr/local/bin/setup-latency.sh
    entrypoint: ["/bin/sh", "-c", "sleep 9999999"]

  cassandra2:
    image: cassandra:latest
    container_name: cassandra2
    environment:
      - CASSANDRA_CLUSTER_NAME=JanusGraphCluster
      - CASSANDRA_SEEDS=cassandra1
      - HEAP_NEWSIZE=128M
      - MAX_HEAP_SIZE=2048M
    networks:
      - janus-net

  cassandra2-netem:
    image: gaiadocker/iproute2
    container_name: cassandra2-netem
    network_mode: "service:cassandra2"   # share net namespace with cassandra2
    cap_add:
      - NET_ADMIN
    volumes:
      - ../setup-latency.sh:/usr/local/bin/setup-latency.sh
    entrypoint: ["/bin/sh", "-c", "sleep 9999999"]

  cassandra3:
    image: cassandra:latest
    container_name: cassandra3
    environment:
      - CASSANDRA_CLUSTER_NAME=JanusGraphCluster
      - CASSANDRA_SEEDS=cassandra1
      - HEAP_NEWSIZE=128M
      - MAX_HEAP_SIZE=2048M
    networks:
      - janus-net
  cassandra3-netem:
    image: gaiadocker/iproute2
    container_name: cassandra3-netem
    network_mode: "service:cassandra3"   # share net namespace with cassandra3
    cap_add:
      - NET_ADMIN
    volumes:
      - ../setup-latency.sh:/usr/local/bin/setup-latency.sh
    entrypoint: ["/bin/sh", "-c", "sleep 9999999"]

  janusgraph:
    image: janusgraph/janusgraph:latest
    container_name: janusgraph
    environment:
      - JANUSGRAPH_STORAGE_BACKEND=cassandra
      - JANUSGRAPH_STORAGE_HOSTS=cassandra1,cassandra2,cassandra3
      - JANUSGRAPH_STORAGE_CASSANDRA_CONSISTENCY_LEVEL=QUORUM
    ports:
      - "8182:8182"
    networks:
      - janus-net

networks:
  janus-net:
    driver: bridge
