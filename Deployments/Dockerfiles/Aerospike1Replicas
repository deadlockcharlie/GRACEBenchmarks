services:
  aerospike:
    image: container.aerospike.com/aerospike/aerospike-server
    container_name: aerospike-single
    hostname: aerospike
    ports:
      - "3000:3000"   # Client port
      - "3001:3001"   # Fabric port
      - "3002:3002"   # Heartbeat port
      - "3003:3003"   # Info port
    volumes:
      - ./aerospike1.conf:/etc/aerospike/aerospike.conf
    restart: unless-stopped
    ulimits:
      nofile: 65536
  aerospike-tools:
    image: container.aerospike.com/aerospike/aerospike-tools
    container_name: aerospike-tools
    depends_on:
      - aerospike
    environment:
      - AS_HOST=aerospike-single
      - AS_PORT=3000
    entrypoint: tail -f /dev/null  # Keep the container running
    restart: unless-stopped

volumes:
  aerospike_data:
  aerospike_logs: